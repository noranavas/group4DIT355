<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox stylesheets="/css/main.css"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sourcecodemodeler.view.Home"
      fx:id="container">
    <children>
        <Label fx:id="title" text="Source Code Modeler"/>
        <HBox styleClass="buttons">
            <children>
                <StackPane>
                    <Button onAction="#convertToXML" text="Convert to XML"/>
                </StackPane>
                <StackPane>
                    <Button onAction="#printXMLContent" text="Print XML Content"/>
                </StackPane>
                <StackPane>
                    <Button onAction="#printFormattedXML" text="Print formatted XML"/>
                </StackPane>
                <StackPane>
                    <Button onAction="#selectFile" text="Select File"/>
                </StackPane>
            </children>
        </HBox>
        <Label text="${controller.fileName}"/>
    </children>
</VBox>